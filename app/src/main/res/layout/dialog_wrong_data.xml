<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200"
        android:layout_marginTop="72dp"
        android:src="@drawable/img_wrong_login_logo"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="Oops...couldn't Sign In"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Your username and password don't match \n please try again"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/dialog_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d50"
        android:background="@color/oragne"
        android:text="@string/try_again"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/d50"
        android:layout_marginEnd="@dimen/d50"
        android:layout_marginBottom="@dimen/d50"
        />

</LinearLayout>