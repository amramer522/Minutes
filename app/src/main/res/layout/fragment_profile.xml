                android:layout_height="@dimen/d1"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/grey"
                android:layout_below="@id/profile_fragment_tv_mobile_number"

                />

            <ImageView
                android:id="@+id/bus_line_drawable_start"
                style="@style/profile_imgs"
                android:layout_below="@id/profile_line5"
                app:srcCompat="@drawable/ic_profile_map"
