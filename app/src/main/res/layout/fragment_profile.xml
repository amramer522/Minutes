            <TextView
                android:id="@+id/profile_fragment_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_fragment_img"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/d10"
                android:layout_marginTop="@dimen/d10"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:textSize="@dimen/s20" />

            <TextView
                android:id="@+id/profile_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:layout_below="@id/profile_fragment_tv_user_name"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/grey"

                />

            <ImageView
                android:id="@+id/student_id_drawable_start"
                style="@style/profile_imgs"
                android:layout_below="@id/profile_line2"
                app:srcCompat="@drawable/ic_profile_student_id"
                />

            <TextView
                android:id="@+id/profile_fragment_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_line2"
                android:layout_marginStart="@dimen/d10"
                android:layout_toEndOf="@id/student_id_drawable_start"
                android:layout_marginTop="@dimen/d15"
                android:text="@string/student_id"
                android:textColor="@color/black"
                android:textSize="@dimen/s20" />

            <TextView
                android:id="@+id/profile_line3"
                android:layout_below="@id/profile_fragment_tv_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/grey" />


            <ImageView
                android:id="@+id/email_drawable_start"
                style="@style/profile_imgs"
                android:layout_below="@id/profile_line3"
                app:srcCompat="@drawable/ic_profile_email"
                />

            <TextView
                android:layout_below="@id/profile_line3"
                android:id="@+id/profile_fragment_tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d10"
                android:layout_toEndOf="@id/student_id_drawable_start"
                android:layout_marginTop="@dimen/d15"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/s20" />

            <TextView
                android:layout_below="@id/profile_fragment_tv_email"
                android:id="@+id/profile_line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/grey"
                />

            <ImageView
                android:id="@+id/mobile_number_drawable_start"
                style="@style/profile_imgs"
                android:layout_below="@id/profile_line4"
                app:srcCompat="@drawable/ic_profile_phone"
                />

            <TextView
                android:id="@+id/profile_fragment_tv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_line4"
                android:layout_marginStart="@dimen/d10"
                android:layout_toEndOf="@id/student_id_drawable_start"
                android:layout_marginTop="@dimen/d15"
                android:text="@string/mobile_number"
                android:textColor="@color/black"
                android:textSize="@dimen/s20" />

